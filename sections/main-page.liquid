<div class="page">
  <div class="page__container bg-white overflow-hidden ">
    <div class="page__title text-center max-w-none">
      <h1 class="main-page-title page-title hero">
        {{ page.title | escape }}
      </h1>
    </div>
    <div class="rte page__body">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "enabled_on": {
    "templates": [
      "page"
    ]
  },
  "tag": "section",
  "class": "section"
}
{% endschema %}

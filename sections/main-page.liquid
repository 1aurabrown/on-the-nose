{% schema %}
{
  "name": "t:sections.main-page.name",
  "enabled_on": {
    "templates": [
      "page"
    ]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show page title as indented heading",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "default": true,
      "label": "Show arrows next to links"
    }
  ],
  "tag": "section",
  "class": "section-main-page"
}
{% endschema %}

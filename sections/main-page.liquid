<div class="text-link-container padding-x padding-top pb-15 pb-30 md:pb-20 {% if section.settings.border %} border-b{% endif %} rte">

  {% if section.settings.show_title %}
    <h2>{{ page.title }}</h2>
  {% endif %}
  {{ page.content }}
</div>

{% stylesheet %}
  #shopify-section-template--18557877977373__main a:after {
    content: ' â†—';

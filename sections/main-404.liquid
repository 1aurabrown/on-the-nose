<style type="text/css">
  .section-404 {
    height: var(--screen-less-header);
  }
</style>

<div class="section-404 bg-red-svg flex flex-col items-center justify-center">
  <h1 class="h5 md:h1 text-center">
    {{ section.settings.text | newline_to_br }}
  </h1>
  <a href="{{ routes.collections_url }}" class="button hover:bg-black mt-5 md:mt-15">
    {{ section.settings.cta }}
  </a>
</div>


{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "enabled_on": {
    "templates": [
      "404"
    ]
  },
  "settings": [
    {
      "id": "text",
      "label": "Text",
      "type": "textarea",
      "default": "Lorem ipsum dolor sit amet, consectetur elit."
    },
    {
      "id": "cta",
      "label": "Button Text",
      "type": "text",
      "default": "Continue Shopping"
    }
  ]
}
{% endschema %}